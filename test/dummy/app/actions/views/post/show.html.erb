<p id="notice"><%= notice %></p>

<%= div_for @post do %>

  <% unless current_page?(:index) || params[:controller] != 'posts' %>
    <%= content_tag :div, class: 'back-link' do %>
      <%= index_link %>
    <% end %>
  <% end %>

  <%= content_tag header_tag, title %>

  <div class="body">
    <p><%= body %></p>
  </div>

  <ul class="links">
    <li><%= edit_link %></li>
    <li><%= destroy_link %></li>
  </ul>

<% end %>

<p><%= @block_content %></p>
