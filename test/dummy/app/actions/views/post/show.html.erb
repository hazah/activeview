<% if current_page?(:show) %>
  <p id="notice"><%= notice %></p>
<% end %>

<%= div_for @post do %>
  <% if current_page?(:show) %>
    <%= content_tag :div, class: 'back-link' do %>
      <%= index_link %>
    <% end %>
  <% end %>

  <%= content_tag header_tag, title %>

  <div class="body">
    <p><%= body %></p>
  </div>

  <ul class="links">
    <li><%= edit_link %></li>
    <li><%= destroy_link %></li>
  </ul>

<% end %>

<p><%= @block_content %></p>
